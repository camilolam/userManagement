                       })
               }
           })
           
        }

        function showUsers() {
            alert("mostrar datos");
            fetch("@Url.Action("showUsers","Home")")
                .then(function (res) {
                    if (res.ok) {
                        res.json()
                            .then(function (respuesta) {
                                foreach
                                let resJson = JSON.parse(respuesta)
